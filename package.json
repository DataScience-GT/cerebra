{
  "name": "cerebra",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.2.5",
    "prisma": "^7.1.0",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3"
  }
}
